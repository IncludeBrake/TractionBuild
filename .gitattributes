# Auto detect text files and perform LF normalization
* text=auto eol=lf

# Shell scripts
*.sh text eol=lf

# Windows batch files
*.bat text eol=crlf

# PowerShell scripts
*.ps1 text eol=crlf

# Image files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text

# Model files (use Git LFS for large files)
*.pt filter=lfs diff=lfs merge=lfs -text
*.gguf filter=lfs diff=lfs merge=lfs -text
*.bin filter=lfs diff=lfs merge=lfs -text
*.safetensors filter=lfs diff=lfs merge=lfs -text

# Archive files
*.zip binary
*.tar binary
*.gz binary
*.rar binary

# Document files
*.pdf binary
*.doc binary
*.docx binary

# Python files
*.py text eol=lf

# Configuration files
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Markdown files
*.md text eol=lf

# Docker files
Dockerfile text eol=lf
*.dockerfile text eol=lf

# Kubernetes files
*.yaml text eol=lf
*.yml text eol=lf

# Log files
*.log text eol=lf

# Lock files
*.lock text eol=lf
