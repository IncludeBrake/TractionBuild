# TractionBuild Production Environment Configuration
# Copy this file to .env and fill in your actual values

# ===========================================
# REQUIRED API KEYS
# ===========================================

# OpenAI API Key (Required for LLM functionality)
OPENAI_API_KEY=your_openai_api_key_here

# xAI API Key (Required for real-time market data)
XAI_API_KEY=your_xai_api_key_here

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Neo4j Database (Required)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# For Railway: Use Railway's Neo4j service
# NEO4J_URI=${{ Railway.NEO4J_URL }}
# NEO4J_USER=${{ Railway.NEO4J_USER }}
# NEO4J_PASSWORD=${{ Railway.NEO4J_PASSWORD }}

# ===========================================
# OPTIONAL SERVICES
# ===========================================

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379/0

# HashiCorp Vault (Optional - for secrets management)
VAULT_ADDR=http://localhost:8200

# ===========================================
# LLM CONFIGURATION
# ===========================================

# Primary LLM Model (Cost-optimized for production)
DEFAULT_LLM_MODEL=gpt-3.5-turbo

# Fallback LLM Model
FALLBACK_LLM_MODEL=gpt-4o-mini

# Real-time LLM Model (xAI Grok for market data)
REAL_TIME_LLM_MODEL=grok3

# ===========================================
# APPLICATION SETTINGS
# ===========================================

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Application
PROJECT_NAME=tractionbuild
HOST=0.0.0.0
PORT=8000

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable/Disable features
CODECARBON_ENABLED=false
VAULT_ENABLED=false
STREAMLIT_ENABLED=true
